{{!-- Template for each comment card, will get the data from the get established. --}}
<div class="comments">
    {{#each this }}
    <div class="main-wrapper flex justify-center">
        <div class="grid basis-4/5 my-2">
            <div class="rounded-lg border-2 border-black rounded-lg">
                <div class="flex justify-between bg-blue-600 display-inline border-b-2 border-black rounded-t-md">
                <h1 class="m-2 font-bold text-white ">Comment By: {{user.username}}</h1>
                <p class="m-2 text-white text-xs align-middle">On: {{format_date created_at}}</p>
                </div>

                <div class="p-3">
                    <p>{{comment}}</p>
                </div>
            </div>
        
        </div>
    </div>
    {{/each}}
</div>