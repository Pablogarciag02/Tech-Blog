{{#if loggedIn}}
    <div class="mt-5">
        <span class = "inline m-5 px-2 text-2xl text-white bg-red-600 rounded-lg"> 
            <a href="#">
                New Post +
            </a>
        </span>
    </div>
{{/if}}



{{#each posts}}
<div id="{{this.id}}">
    <div class="main-wrapper flex justify-center           hover:scale-105 duration-300 ease-in-out transition duration-200">
        <div class="grid my-10 basis-4/5">
            <div class=" border-2 border-black rounded-lg">
                <div class="flex justify-between bg-red-600 display-inline border-b-2 border-black rounded-t-md">
                 <h1 class="m-2 font-bold text-white text-xl">{{this.title}}</h1>
                 <p class="m-2 text-white text-xs align-middle">Posted by: {{user.username}} On: {{this.createdAt}}</p>
                </div>

                <div class="p-3">
                    <p>{{this.content}}</p>
                </div>
            </div>
        
        </div>
    </div>

</div>
{{/each}}

<div class="modal-create-tile  top-0 left-0 fixed block insert-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full z-40" id="createTileModal" tabindex="-1" aria-labelledby="createTileModal" aria-modal="true" aria-hidden="true" role="dialog">
      <div class="modal-container flex justify-center mt-10 sm:mt-0">
        <div class="md:grid">
          <div class="mt-5 md:mt-0 md:col-span-2">
            <form action="/" method="POST">
              <div class="shadow overflow-hidden sm:rounded-md">
                <div class="px-4 py-5 bg-white sm:p-6 rounded-t-xl">
                  <div class="grid grid-cols-6 gap-6">

                    <div class="flex justify-center flex-col items-center col-span-6">
                      <h2 class ="text-4xl">New Post</h2>
                    </div>

                    <div class="col-span-6">
                      <label for="title" class="block text-sm font-medium text-slate-800">Title</label>
                      <input type="text" name="title" id="url" autocomplete="title" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-0 bg-gray-200 rounded-md" placeholder="Add a captivating title!">
                    </div>

                    <div class="col-span-6">
                      <label for="content" class="block text-sm font-medium text-slate-800">Post</label>
                      <input type="content" name="content" id="content" autocomplete="content" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-0 bg-gray-200 rounded-md" placeholder="Write something interesting!">
                    </div>

                    
                  </div>
                </div>
                <div class="flex flex-shrink-0 flex-wrap items-center justify-center rounded-b-xl px-4 py-3 bg-gray-200 text-right sm:px-6">
                  <button type="submit" id="saveTileBtn" class="inline-block mx-2 px-6 py-2.5 bg-teal-600 text-white font-medium text-xs leading-tight uppercase rounded-lg shadow-md hover:bg-teal-700 active:shadow-lg transition duration-150 ease-in-out" data-bs-dismiss="modal">
                    Save
                  </button>
                  <button type="button" class="inline-block mx-2 px-6 py-2.5 bg-red-500 text-white font-medium text-xs leading-tight uppercase rounded-lg shadow-md hover:bg-red-600 transition duration-150 ease-in-out" id="cancelNewTileBtn" data-bs-dismiss="modal">
                    Cancel
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>




